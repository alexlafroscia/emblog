<div class="post">
  <div class="header">
    <h1>{{model.title}}</h1>
    <button {{action 'toggleEditing'}}>
      {{#if editing}}
        Save
      {{else}}
        Edit
      {{/if}}
    </button>
  </div>

  <div class="content">

    {{#if editing}}
      <div class="editor">
        {{textarea value=model.body}}
      </div>
    {{/if}}

    <div class="rendered">
      {{mark-down model.body}}
    </div>

  </div>
</div>
