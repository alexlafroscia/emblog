<div class="post">
  <div class="header">
    <h1>{{model.title}}</h1>
    <button {{action 'toggleEditing'}}>
      {{#if editing}}
        Save
      {{else}}
        Edit
      {{/if}}
    </button>
  </div>

  {{#if editing}}
    {{textarea value=model.body}}
  {{/if}}

  <div class="content">
    {{mark-down model.body}}
  </div>
</div>
